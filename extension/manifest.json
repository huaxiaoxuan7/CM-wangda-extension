{
    "name": "网大功能增强",
    "description": "轻松完成中移网大学习任务！",
    "version": "0.9.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://wangda.chinamobile.com/*"
            ],
            "js": [
                "content-scripts/app.js",
                "content-scripts/dom/dom.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://wangda.chinamobile.com/*"
            ],
            "resources": [
                "resources/subject.js",
                "resources/course.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://wangda.chinamobile.com/*"
        ]
    }
}